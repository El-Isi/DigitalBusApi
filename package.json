  "main": "index.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "redis-server & tsc-watch --onSuccess \"node ./dist/server.js\"",
    "copy-email-templates": "cp -a ./src/tickets/useCases/tickets/templates/sendTicketTemplate.html ./dist/tickets/useCases/tickets/templates/sendTicketTemplate.html",
    "copy-wallet-files": "cp -a ./src/utils/ticketGenerator/IOS/certificates/* ./dist/utils/ticketGenerator/IOS/certificates/ && cp -a ./src/utils/ticketGenerator/IOS/model/boardingPass.pass/* ./dist/utils/ticketGenerator/IOS/model/boardingPass.pass/",
    "postinstall": "npx tsc && npm run copy-email-templates && npm run copy-wallet-files && node ./dist/utils/ticketGenerator/IOS/createManifest.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
